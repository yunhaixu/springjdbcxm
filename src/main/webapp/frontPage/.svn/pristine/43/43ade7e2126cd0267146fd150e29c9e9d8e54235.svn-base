.con-l {
	float: left;
	width: 758px;
}

.hd-area,
.lists-hd,
.lists-hd2 {
	width: 737px;
	height: 44px;
	border-bottom: 1px solid #d9d9d9;
	margin: 0 auto;
}

.hd-items {
	float: left;
}

.search-area {
	float: right;
}

.hd-item {
	float: left;
	font-size: 15px;
	margin-right: 30px;
	line-height: 43px;
	border-bottom: 2px solid transparent;
	cursor: pointer;
}

.hd-item.hd-cur {
	border-bottom: 2px solid #70c49a;
	font-weight: bold;
}

.search-input {
	float: left;
	width: 206px;
	height: 28px;
	line-height: 28px;
	padding: 0 10px;
	margin-top: 10px;
	border: 1px solid #dbdbdb;
}

.search-btn {
	float: left;
	display: block;
	width: 44px;
	height: 30px;
	border: 1px solid #dbdbdb;
	border-left: 1px solid #fff;
	margin-left: -1px;
	margin-top: 10px;
	padding: 0;
	cursor: pointer;
	background: url(../images/gov-hall/government-searchBg.png) center no-repeat;
	background-color: #71c49a;
}

.bd-area {
	width: 737px;
	height: 206px;
	padding-top: 12px;
	overflow: hidden;
	margin: 0 auto;
}

.personal-item {
	float: left;
	width: 92.4px;
	height: 37px;
	padding-left: 55px;
	line-height: 37px;
	text-align: center;
	margin: 7px 0;
	background: url(../images/gov-hall/icon1.png) 18px center no-repeat;
}

.personal-item:hover {
	background: url(../images/gov-hall/icon1s.png) 18px center no-repeat;
}

/*场景式服务*/
.service-items>a {
	width: 146px;
	height: 99px;
	line-height: 99px;
	font-size: 17px;
	font-weight: bold;
	text-align: center;
	color: #fff;
	float: left;
	margin: 0 25px 0 10px;
	background: url(../images/gov-hall/service1.png) no-repeat;
}

a.service2 {
	background: url(../images/gov-hall/service2.png) no-repeat;
}

a.service3 {
	background: url(../images/gov-hall/service3.png) no-repeat;
}

a.service4 {
	background: url(../images/gov-hall/service4.png) no-repeat;
}

a.service5 {
	margin-top: 10px;
	background: url(../images/gov-hall/service5.png) no-repeat;
}

/*热门事项*/
.lists-hd>span,
.lists-hd2>span {
	float: left;
	font-size: 15px;
	margin-right: 30px;
	line-height: 43px;
	border-bottom: 2px solid #70c49a;
	font-weight: bold;
	cursor: pointer;
}

.lists-bd1 {
	height: 234px;
	overflow: hidden;
	padding-top: 8px;
}

.list-item {
	margin: 0 10px;
	font-size: 13px;
	height: 24px;
}

.lists-bd1>.list-item>a,
.lists-bd2>.list-item>a {
	float: left;
	max-width: 630px;
	line-height: 18px;
	padding-left: 13px;
	margin: 3px 0;
	background: url(../images/gov-hall/point.png) 0 center no-repeat;
}

.lists-bd2>.list-item>a {
	max-width: 180px;
	line-height: 18px;
}

.list-time {
	float: right;
	margin-right: 7px;
	line-height: 24px;
	color: #999999;
}

/*右边*/
.con-r {
	float: left;
	width: 292px;
}

.lists-hd2>a {
	float: right;
	line-height: 45px;
}

.lists-hd2>a:hover {
	color: #f67300;
}

.con-r .list-item {
	height: 24px;
}

.con-r .list-time {
	line-height: 24px;
}

.lists-hd2 {
	width: 272px;
	margin-bottom: 5px;
}

.r-bottom>a {
	float: left;
	width: 116px;
	height: 80px;
	margin-top: 12px;
	background: url(../images/gov-hall/mail-reply.png) no-repeat;
}

a.bot-link1 {
	margin-left: 20px;
}

a.bot-link2 {
	margin-left: 18px;
	background: url(../images/gov-hall/range.png) no-repeat;
}