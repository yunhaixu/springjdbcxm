.con-title {
	width: 983px;
	margin: 0 auto;
}

.title-l,
.title-r {
	float: left;
	height: 88px;
}

.title-l {
	width: 118px;
	background-color: #d6edfc;
	border-top-left-radius: 6px;
	border-bottom-left-radius: 6px;
}

.title-r {
	width: 865px;
	background-color: #edf7fe;
	border-top-right-radius: 6px;
	border-bottom-right-radius: 6px;
}

.title-l>p {
	text-align: center;
	line-height: 33px;
	font-size: 16px;
	font-weight: bold;
	margin-top: 15px;
}

.title-l>span {
	display: block;
	text-align: center;
	color: #e77918;
	font-weight: bold;
}

.title-r>p {
	line-height: 26px;
	padding: 0 17px;
	margin-top: 15px;
}

.con-hd-area {
	width: 866px;
	height: 116px;
	padding-left: 117px;
	margin: 0 auto;
	background: url(../images/gov-hall/hd-bg.png) center 39px no-repeat;
}

.hd-item {
	width: 188px;
	height: 100%;
	float: left;
	cursor: pointer;
	background: url(../images/gov-hall/step.png) center 16px no-repeat;
}

.hd-item.hd-cur {
	background: url(../images/gov-hall/step-cur.png) center 10px no-repeat;
}

.hd-item.hd-cur>p.step-number {
	color: #fff;
}

.hd-item.hd-cur>p.step-name {
	color: #e77918;
}

.hd-item>p {
	text-align: center;
}

.step-number {
	font-size: 22px;
	font-weight: bold;
	margin-top: 33px;
}

.step-name {
	margin-top: 28px;
}

.con-bd-area {
	width: 983px;
	height: 272px;
	margin: 0 auto;
	background-color: #f6f6f6;
	overflow: hidden;
}

.bd-item {
	padding: 20px 30px 10px 30px;
	height: 242px;
	font-size: 15px;
	line-height: 28px;
}
.ti15 {
	font-weight: bold;
	text-indent: 25px;
}
.fs18 {
	font-size: 17px;
}
.todo-radio {
	margin-left: 15px;
}
.todo-type {
	float: left;
	width: 275px;
	font-size: 16px;
}
.todo-radio {
	float: left;
	width: 590px;
}
.todo-radio>label {
	display: block;
	margin-bottom: 25px;
	font-size: 16px;
}
.todo-radio>label input {
	vertical-align: middle;
	margin-right: 5px;
}

.grey-btnStyle {
	display: block;
    background-color: #70c49a;
	width: 145px;
	height: 45px;
	line-height: 45px;
	margin:  20px auto 0 auto;
}
