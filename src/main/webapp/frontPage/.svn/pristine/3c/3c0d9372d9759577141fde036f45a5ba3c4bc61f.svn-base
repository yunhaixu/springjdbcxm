

.con-title {
    width: 983px;
    margin: 0 auto;
}

.title-l,
.title-r {
    float: left;
    height: 88px;
}

.title-l {
    width: 118px;
    background-color: #d6edfc;
    border-top-left-radius: 6px;
    border-bottom-left-radius: 6px;
}

.title-r {
    width: 865px;
    background-color: #edf7fe;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
}

.title-l>p {
    text-align: center;
    line-height: 33px;
    font-size: 16px;
    font-weight: bold;
    margin-top: 15px;
}

.title-l>span {
    display: block;
    text-align: center;
    color: #e77918;
    font-weight: bold;
}

.title-r>p {
    line-height: 26px;
    padding: 0 17px;
    margin-top: 15px;
}

.con-hd-area {
    width: 866px;
    height: 116px;
    padding-left: 117px;
    margin: 0 auto;
    background: url(../images/gov-hall/hd-bg.png) center 39px no-repeat;
}

.hd-item {
    width: 150px;
    height: 100%;
    float: left;
    cursor: pointer;
    background: url(../images/gov-hall/step.png) center 16px no-repeat;
}

.hd-item.hd-cur {
    background: url(../images/gov-hall/step-cur2.png) center 10px no-repeat;
}

.hd-item.hd-cur>p.step-number {
    color: #fff;
}

.hd-item.hd-cur>p.step-name {
    color: #e77918;
}

.hd-item>p {
    text-align: center;
}

.step-number {
    font-size: 22px;
    font-weight: bold;
    margin-top: 33px;
}

.step-name {
    margin-top: 28px;
    font-weight: bold;
    color: #d0d0d0;
}

.con-bd-area {
    width: 983px;
    height: 272px;
    margin: 20px auto 0;
    /*background-color: #f6f6f6;*/
    overflow: hidden;
}

.bd-item {
    padding: 20px 30px 10px 30px;
    height: 242px;
    font-size: 15px;
    line-height: 28px;
}

.ti15 {
    font-weight: bold;
    text-indent: 25px;
}

.fs18 {
    font-size: 17px;
}

.todo-radio {
    margin-left: 15px;
}

.todo-type {
    float: left;
    width: 275px;
    font-size: 16px;
}

.todo-radio {
    float: left;
    width: 590px;
}

.todo-radio>label {
    display: block;
    margin-bottom: 25px;
    font-size: 16px;
}

.todo-radio>label input {
    vertical-align: middle;
    margin-right: 5px;
}

.grey-btnStyle {
    display: block;
    background-color: #70c49a;
    width: 145px;
    height: 45px;
    line-height: 45px;
    margin: 20px auto 0 auto;
}


/*准备材料*/

.ready-info {
    border: 1px solid #dbdbdb;
    border-bottom: none;
    margin-bottom: 13px;
}

.ready-info>h2 {
    height: 44px;
    line-height: 44px;
    padding-left: 46px;
    border-bottom: 1px solid #dbdbdb;
    background: url(../images/gov-hall/ready-arrow.png) 29px center no-repeat;
    background-color: #f9f9f9;
}

.slide-arrow {
    width: 18px;
    height: 10px;
    margin: 17px 24px 0 0;
    background: url(../images/gov-hall/down.png) no-repeat;
    cursor: pointer;
}

.detail-txt {
    padding: 12px 40px;
    border-bottom: 1px solid #dbdbdb;
    display: none;
}

.ready-info.open .slide-arrow {
    background: url(../images/gov-hall/up.png) no-repeat;
}

.detail-txt>p {
    line-height: 33px;
    font-size: 13px;
}


/*办理流程*/

.process-info {
    margin: 0 15px 0 29px;
    border-left: 1px solid #009241;
}

.process-item {
    border-bottom: 1px solid #bdbdbd;
    margin-left: 37px;
    margin-bottom: 16px;
}

.process-hd {
    font-size: 15px;
    font-weight: bold;
    margin-left: -51.5px;
}

.process-hd>label {
    float: left;
    width: 28px;
    height: 33px;
    background: url(../images/gov-hall/process-hd.png) no-repeat;
    text-align: center;
    line-height: 33px;
    color: #fff;
}

.process-hd>span {
    float: left;
    margin-left: 24px;
    line-height: 33px;
    color: #009241;
}

.slide-arrow2 {
    width: 18px;
    height: 10px;
    margin: 17px 24px 0 0;
    background: url(../images/gov-hall/down.png) no-repeat;
    cursor: pointer;
}

.process-txt {
    display: none;
    font-size: 15px;
    line-height: 30px;
}

.process-item.open .slide-arrow2 {
    background: url(../images/gov-hall/up.png) no-repeat;
}

.last-step .process-txt {
    border-left: 1px solid #fff;
    margin-left: -38px;
    padding-left: 38px;
}
